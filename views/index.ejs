<!DOCTYPE html>
<html>
<head>
  <title>Results</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Common Free Time</h1>
  <% if (Object.keys(overlaps).length === 0) { %>
    <p>No common time found.</p>
  <% } else { %>
    <ul>
      <% Object.keys(overlaps).forEach(day => { %>
        <li><%= day %>: <%= overlaps[day][0] %> to <%= overlaps[day][1] %></li>
      <% }) %>
    </ul>
  <% } %>
  <a href="/">Back</a>
</body>
</html>